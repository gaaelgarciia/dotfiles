* {
    border: none;
    font-family: 'Fira Code, Regular', 'Symbols Nerd Font Mono';
    font-feature-settings: '"zero", "ss01", "ss02", "ss03", "ss04", "ss05", "cv31"';
    min-height: 30px;
    font-size: 16px;
    color: white;
}


window#waybar {
    background: transparent;
    color: white;
}



#clock, #pulseaudio, #network, #battery,
#custom-arch, #workspaces, #window, #language {
  border-radius: 10px;
  background-color: #282727;
  color: white;
  margin-top: 10px;
  margin-right: 8px;
  padding-top: 1px;
  padding-left: 10px;
  padding-right: 10px;


#workspaces {
  padding-right: 10px;
}

#custom-arch {
  font-size: 20px;
  margin-left: 15px;
  color: white;
  padding-right: 18px;
}


#workspaces button {
    padding: 0 10px;
    color: white;
}

#clock {
    color: white;
}

#window {
    color: white;
}

#pulseaudio {
	color: white;	
}

#battery {
    color: white;
    margin-right: 10px;
    padding-right: 15px;
}

#network {
    color: white;
    padding-right: 20px;
}


